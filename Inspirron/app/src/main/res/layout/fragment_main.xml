<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity$MainActivityFragment"
    android:id="@+id/welcome"
    android:background="@color/background_material_light">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:id="@+id/imageView"
        android:layout_gravity="left|top"
        android:src="@drawable/welcome" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:text="BE INSPIRED WITH THIS LIST.  "
        android:id="@+id/button1"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="false"
        android:background="@mipmap/ic_launcher"
        android:layout_above="@+id/button1"
        android:layout_below="@+id/imageView">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HAVE YOU EVER THOUGHT OF MAKING IMPACT AS A YOUTH, AND NOT SURE OF ITS POSSIBILITY? DON'T PANIC, SOME PEOPLE ALREADY HAVE, WHILE SO MANY OTHERS ARE"
        android:id="@+id/textView"
        android:layout_gravity="right|center_vertical"
        android:textSize="24sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:typeface="serif"
        android:visibility="visible"
        android:enabled="true"
        android:gravity="center_horizontal" />
    </ScrollView>
</RelativeLayout>
